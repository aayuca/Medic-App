<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingTop="8dp" >

    <View
        android:id="@+id/form_status"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:background="#ff0000" />

    <Button
        android:id="@+id/hi_hospitalicon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:drawableTop="@drawable/medicapp_48"
        android:padding="5dp"
        android:text="Estd"
        android:textColor="#09BBD1"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/hi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF6600"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hi_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District"
            android:textColor="#DB165D"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/hi_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No"
            android:textColor="#00FF00"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/hi_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS"
            android:textColor="#654321"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/hi_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="TextView"
            android:textColor="#CCFF33"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/hi_map"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@drawable/gps" />

        <ImageButton
            android:id="@+id/hi_call"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@drawable/mobile" />
    </LinearLayout>

</LinearLayout>